<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="service-virtualisering"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<requiredProperty key="domain" />
		<requiredProperty key="subdomain" />
		<requiredProperty key="serviceName">
			<defaultValue>${artifactId}</defaultValue>
		</requiredProperty>
		<requiredProperty key="serviceInteractionName">
			<defaultValue>${serviceName}Interaction</defaultValue>
		</requiredProperty>
		<requiredProperty key="serviceMethodName">
			<defaultValue>${serviceName}</defaultValue>
		</requiredProperty>
		<requiredProperty key="serviceRelativePath">
			<defaultValue>${serviceName}/1/rivtabp20</defaultValue>
		</requiredProperty>
		<requiredProperty key="serviceWsdlFile">
			<defaultValue>${serviceInteractionName}_1.0_rivtabp20.wsdl</defaultValue>
		</requiredProperty>
		<requiredProperty key="serviceNamespace">
			<defaultValue>urn:riv:${domain}:${subdomain}:${serviceName}:1:rivtabp20</defaultValue>
		</requiredProperty>
		<requiredProperty key="servicePackage">
			<defaultValue>se.riv.${domain}.${subdomain}.v1</defaultValue>
		</requiredProperty>
		<requiredProperty key="servicePackageDir">
			<defaultValue>se/riv/${domain}/${subdomain}/v1</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<modules>
		<module id="virtualisering" dir="Virtualisering" name="virtualisering">
			<fileSets>
				<fileSet filtered="true" encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>tp-virtuell-tjanst-config.xml</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.wsdl</include>
						<include>**/*.xsd</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>
