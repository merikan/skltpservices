<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>${groupId}</groupId>
  <artifactId>${domain}-${subdomain}-${artifactId}</artifactId>
  <version>${version}</version>
  <packaging>pom</packaging>
  <name>${domain}-${subdomain}-${artifactId}</name>

  <properties>
  	<cxf.version>2.3.2</cxf.version>
	<spring.version>3.0.5</spring.version>
	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	
	<service.name>${artifactId}</service.name>
	<service.method.name>${artifactId}</service.method.name>
	<service.interaction.name>${artifactId}Interaction</service.interaction.name>
	
	<osor.cert.directory>https://svn.forge.osor.eu/svn/skltpservices/ServiceInteractions/certs</osor.cert.directory>
	<osor.schema.directory.url>https://svn.forge.osor.eu/svn/rivta/ServiceInteractions/riv/${domain}/${subdomain}/trunk/schemas/interactions/${service.interaction.name}</osor.schema.directory.url>
	<osor.core.schema.directory.url>https://svn.forge.osor.eu/svn/rivta/ServiceInteractions/riv/${domain}/${subdomain}/trunk/schemas/core_components</osor.core.schema.directory.url>
    <service.wsdl.file>${service.interaction.name}_1.0_RIVTABP20.wsdl</service.wsdl.file>
    <service.relative.path>/${artifactId}/1/rivtabp20</service.relative.path>
    <service.producer.url>https://localhost:21000/vp${service.relative.path}</service.producer.url>
    
    <service.base.package>se.riv.${domain}.${subdomain}.v1</service.base.package>
    <service.base.package.dir>se/riv/${domain}/${subdomain}/v1</service.base.package.dir>
    
    <service.package>se.riv.${domain}.${subdomain}.v1</service.package>
    <service.ns>urn:riv:${domain}:${subdomain}:${artifactId}:1:rivtabp20</service.ns>
    
    <service.responder.package>se.riv.${domain}.${subdomain}.v1</service.responder.package>
    <service.responder.ns>urn:riv:${domain}:${subdomain}:${artifactId}Responder:1</service.responder.ns>
  </properties>
 
  <!-- Modules to be created for each service -->

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
